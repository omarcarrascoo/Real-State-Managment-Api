<%- layout('layout/main.ejs')%>
    <main class="max container-sm mt-30 flex-wrap" style="margin-top: 50px;">
        <h1 style="margin-bottom: 20px;">Añadir Productos</h1>
        <form class="container-sm" method="post" action="/newProduct">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Nombre del Producto</label>
              <input type="text" class="form-control" id="exampleInputEmail" name="productName">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">URL de la imagen</label>
                <input type="text" class="form-control" id="exampleInputEmail" name="productImg">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Categoria</label>
                <input type="text" class="form-control" id="exampleInputEmail" name="productCategory">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Precio</label>
                <input type="number" step="0.01" class="form-control" id="exampleInputEmail" name="productPrice">
            </div>
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Stock</label>
                <input type="number" class="form-control" id="exampleInputEmail" name="productStock">
            </div>
            <button type="submit" class="btn btn-primary">Añadir Producto</button>
          </form>
    </main>