<%- layout('layout/main.ejs')%>
<div class="card max">
    <div class="row">
        <div class="col-md-8 cart">
            <div class="title">
                <div class="row">
                    <div class="col"><h4><b>Shopping Cart</b></h4></div>
                    <div class="col align-self-center text-right text-muted">
                        <%= data.length %>items</div>
                </div>
            </div>  
            <% if (data.length == 0) { %>
                <p>Cart is empty!</p>
              <% } else { %> 
            <% for (var i = 0; i < data.length; i++) { %> 
            <div class="row border-top border-bottom">
                <div class="row main align-items-center">
                    <div class="col-2"><img class="img_max img-fluid" src="<%= data[i].productImg %>"></div>
                    <div class="col">
                        <div class="row"><%= data[i].productName %></div>
                    </div>
                    <!-- <div class="col">
                        <a href="#">-</a><a href="#" class="border">1</a><a href="#">+</a>
                    </div> -->
                    <div class="col">&dollar; <%= data[i].productPrice%> 
                        <a href="/delateCart/<%=data[i].productId%>">
                            <span class="close">&#10005;</span>
                        </div>
                    </a>
                </div>
            </div>
            <% } %>
            <% } %>
            <div class="back-to-shop"><a href="/">&leftarrow;</a><span class="text-muted">Back to shop</span></div>
        </div>
        <div class="col-md-4 summary">
            <div><h5><b>Cuenta</b></h5></div>
            <hr>
            <div class="row">
                <div class="col" style="padding-left:0;">ITEMS <%= data.length %></div>
                <div class="col text-right">&dollar;; <%= total%></div>
            </div>
            <form>
                <p>Envio</p>
                <select><option class="text-muted">Envio-estandar &dollar;;5.00</option></select>
                <p>COdigo de Descuento</p>
                <input id="code" placeholder="Pon tu codigo">
            </form>
            <div class="row" style="border-top: 1px solid rgba(0,0,0,.1); padding: 2vh 0;">
                <div class="col">Precio total</div>
                <div class="col text-right">&dollar;; <%= total + 5%></div>
            </div>
            <button class="btn">Pagar</button>
        </div>
    </div>
    
</div>